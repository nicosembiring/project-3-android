<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".UserActivity">

    <ImageView
        android:id="@+id/imageViewPengemudi"
        android:layout_width="114dp"
        android:layout_height="91dp"
        android:src="@mipmap/nico" />


    <TextView
        android:id="@+id/textView_id_pengguna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="id_pengguna"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Nama" />

    <TextView
        android:id="@+id/textView_umur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Umur" />

    <TextView
        android:id="@+id/textView_lahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Tanggal Lahir" />
    <TextView
        android:id="@+id/textView_notel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Nomor Telepon" />

    <TextView
        android:id="@+id/textView_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Alamat" />

    <Button
        android:id="@+id/button_editprofil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:onClick="edit_profil"
        android:text="Edit Profil" />
</LinearLayout>